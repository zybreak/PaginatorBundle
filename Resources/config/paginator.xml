<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="knp_paginator.adapter.class">Knp\PaginatorBundle\Paginator\DoctrineAdapter</parameter>

        <parameter key="knp_paginator.event.listener.orm.sortable.class">Knp\PaginatorBundle\Event\Listener\ORM\Sortable</parameter>
        <parameter key="knp_paginator.event.listener.orm.paginate.class">Knp\PaginatorBundle\Event\Listener\ORM\Paginate</parameter>
    </parameters>

    <services>
        <service id="knp_paginator.adapter" class="%knp_paginator.adapter.class%" scope="prototype">
            <argument type="service" id="service_container" />
        </service>
    </services>
</container>
