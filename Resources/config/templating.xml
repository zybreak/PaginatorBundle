<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="knp_paginator.templating.helper.class">Knp\PaginatorBundle\Templating\Helper\PaginationHelper</parameter>
        <parameter key="knp_paginator.twig.extension.class">Knp\PaginatorBundle\Templating\PaginatorExtension</parameter>
    </parameters>

    <services>
        <service id="knp_paginator.twig.extension" class="%knp_paginator.twig.extension.class%">
            <argument type="service" id="service_container" />
            <tag name="twig.extension" />
        </service>
        <service id="templating.helper.knp_paginator" class="%knp_paginator.templating.helper.class%">
            <argument type="service" id="templating" />
            <argument type="service" id="templating.helper.router" />
            <argument type="service" id="translator" />
            <tag name="templating.helper" alias="pagination" />
            <tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest" />
        </service>
    </services>
</container>
